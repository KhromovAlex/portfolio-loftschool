extends ../layout-welcome

block vars
    - var title = "Главная страница";

block content
    .welcome-page
        header.header-welcome
            button.link-login(type="button")
                span.text-link Авторизоваться
        section.welcome-content
            .welcome-content__avatar
                .avatar
                    img.avatar__img(src="img/welcome/ava.jpg" alt="avatar")
            .welcome-content__user-name Александр Хромов
            .welcome-content__desc Личный сайт веб разработчика
            .welcome-content__social
                .social
                    ul.social__list
                        li.social__item
                            a.social__link(href="https://vk.com/sashko_khr" target="_blank")
                                svg.social__svg
                                    use(xlink:href="#icon-vk")
                        li.social__item
                            a.social__link(href="https://github.com/KhromovAlex" target="_blank")
                                svg.social__svg
                                    use(xlink:href="#icon-github")
                        li.social__item
                            a.social__link(href="#")
                                svg.social__svg
                                    use(xlink:href="#icon-in")
            nav.welcome-nav
                ul.welcome-nav__list
                    li.welcome-nav__item
                        a.welcome-nav__link(href="works.html")
                            span.text-link Мои работы
                    li.welcome-nav__item
                        a.welcome-nav__link(href="about.html")
                            span.text-link Обо мне
                    li.welcome-nav__item
                        a.welcome-nav__link(href="blog.html")
                            span.text-link Блог
        footer.footer-welcome
            .footer-welcome__copyright
                .copyright-welcome.
                        © Александр Хромов | создано с любовью в LoftSchool | 2017
