extends ../layout

block vars
    - var title = "Блог";


block full-screen-menu
    .full-screen-menu
        nav.main-nav
            ul.main-nav__list
                li.main-nav__item
                    a.main-nav__link(href="works.html")
                        span.text-link_full-screen Мои работы
                li.main-nav__item
                    a.main-nav__link(href="about.html")
                        span.text-link_full-screen Обо мне
                li.main-nav__item
                    a.main-nav__link(href="blog.html")
                        span.text-link_full-screen Блог
                li.main-nav__item
                    a.main-nav__link(href="/#auth")
                        span.text-link_full-screen Авторизация
block header
    header.header
        .header__top
            .header__social
                .social
                    ul.social__list
                        li.social__item
                            a.social__link(href="https://vk.com/sashko_khr" target="_blank")
                                svg.social__svg.social__svg_fill
                                    use(xlink:href="img/sprite.svg#icon-vk")
                        li.social__item
                            a.social__link(href="https://github.com/KhromovAlex" target="_blank")
                                svg.social__svg.social__svg_fill
                                    use(xlink:href="img/sprite.svg#icon-github")
                        li.social__item
                            a.social__link(href="https://www.instagram.com/" target="_blank")
                                svg.social__svg.social__svg_fill
                                    use(xlink:href="img/sprite.svg#icon-in")
            button.header__nav.header__nav-link(type="button")
                svg.header__nav-svg
                    use(xlink:href="img/sprite.svg#icon-hamburger")
        .header__center.header__center_blog
            .header__avatar
                .avatar
                    img.avatar__img(src="img/welcome/ava.jpg" alt="avatar")
            .header__title-wrap
                h1.title.title_header Блог
                svg.header__bg-svg.header__bg-svg_blog
                    use(xlink:href="img/sprite.svg#icon-blog_header")
            .header__desc Статьи, которые я написал
block content
    .blog
        .triangle-blog
            svg.triangle-blog__svg(viewBox="0 0 1000 86" preserveAspectRatio="none")
                polygon.triangle-works__svg-left(points="0,0 0,86 500.86,340 500.86,75.5")
                polygon.triangle-works__svg-right(points="1000,0 1000,86 500,86 500,75.5")
        aside.nav-blog
            ul.nav-blog__list
                li.nav-blog__item
                    a(href="#").nav-blog__link.nav-blog__link_active.
